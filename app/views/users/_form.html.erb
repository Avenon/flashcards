<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label (t :email) %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
   <%= f.label (t :password) %><br />
   <%= f.password_field :password %>
</div>
<div class="field">
   <%= f.label (t :password_confirm) %><br />
   <%= f.password_field :password_confirmation %>
</div>
<div class="field">
   <%= f.label (t :user_locale) %><br />
   <%= f.select :locale, I18n.available_locales.map { |locale| [locale] }, include_blank: false %>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
