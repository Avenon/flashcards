<p id="notice"><%= notice %></p>

<h2><%= t :all_users %></h2>

<table>
  <thead>
    <tr>
      <th><%= t :email%></th>
      <th><%= t :password%></th>
      <th>Salt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.crypted_password %></td>
        <td><%= user.salt %></td>
        <td><%= link_to (t :show), user %></td>
        <td><%= link_to (t :edit), edit_user_path(user) %></td>
        <td><%= link_to (t :del_user), user, method: :delete, data: { confirm: (t :del_confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to (t :new_user_title), new_user_path %>
