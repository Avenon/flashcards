<h3> Все пользователи </h3>
<table class="table table-bordered">
  <tr class="info">
    <th>Пользователь</th>
    <th>email</th>
    <th>Пароль</th>
    <th>Действия</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
      <td><%= link_to 'показать', user_path(user), class: "btn btn-info btn-xs" %>
        <%= link_to 'изменить', edit_user_path(user), class: "btn btn-info btn-xs" %>
        <%= link_to 'Удалить', user_path(user), method: :delete, data: { confirm: "Уверены?" }, class: "btn btn-info btn-xs" %></td>
    </tr>
  <% end %>
</table>