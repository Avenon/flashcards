<div class="form-group">
  <%= f.label :original_text, "Оригинальный текст", class: 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= f.input_field :original_text, as: :string, :required => false, class: "form-control" %>
    </div>
    <div class="col-sm-7">
    </div>
</div>
<div class="form-group">
  <%= f.label :translated_text, "Переведенный текст", class: 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= f.input_field :translated_text, as: :string, :required => false, class: "form-control" %>
    </div>
        <div class="col-sm-7">
    </div>
</div>
<div class="form-group">
  <%= f.label :review_date, "Дата проверки", class: 'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= f.input_field :review_date, as: :string, value: (Time.now + 3.days).strftime('%d/%m/%Y'), class: "form-control"  %>
  </div>
      <div class="col-sm-7">
    </div>
</div>
