<div class="form-group">
  <%= f.label :original_text, "Оригинальный текст", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.input_field :original_text, :required => false, class: "form-control" %>
    </div>
</div>
<div class="form-group">
  <%= f.label :translated_text, "Переведенный текст", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.input_field :translated_text, :required => false, class: "form-control" %>
    </div>
</div>
<div class="form-group">
  <%= f.label :review_date, "Дата проверки", class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.input_field :review_date, as: :text, value: (Time.now + (60*60*24*3)).strftime('%d/%m/%Y'), class: "form-control"  %>
  </div>
</div>
