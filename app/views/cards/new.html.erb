<h2> Создание новой карточки</h2>

<% unless @decks.exists? %>
<h3> Сначала создайте колоду! </h3>
<% else %>
<h3> Введите оригинальный текст </h3>
<div class="form-horizontal">
<%= simple_form_for @card do |f| %>
<%= render partial: "form", locals: { f: f } %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.file_field :avatar %>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
<%= f.button :submit, "Создать карточку", class: "btn btn-info btn-sm" %>
</div>
</div>
<% end %>
</div>
<% end %>
