<h2> Редактирование карточки</h2>
<%= form_for @card do |f| %>
  <%= f.text_field :original_text %><br>
  <%= f.text_field :translated_text %><br>
  <%= f.text_field  :review_date %><br>
  <%= f.submit "Изменить" %>
<% end %>
<%= link_to "Удалить карточку", card_path(@card), method: :delete, data: { confirm: "Уверены?" } %>