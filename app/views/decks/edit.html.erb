<h2><%= t :edit_deck_title %></h2>

<div class="form-horizontal">
<%= simple_form_for @deck do |f| %>
<%= render partial: "form", locals: { f: f } %>
<%= f.hidden_field :user_id, value: current_user.id %>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
<%= f.button :submit, (t :edit_confirm), class: "btn btn-info btn-sm" %>
<%= link_to (t :change_active_status), activate_deck_path(@deck), method: :post, data: { confirm: (t :del_confirm) }, class: "btn btn-info btn-sm" %>
</div>
</div>
<% end %>
</div>
